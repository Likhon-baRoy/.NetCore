@using System.Diagnostics
@model IEnumerable<Person>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";

    PersonGridModel personGridModel2 = new PersonGridModel()
    {
      GridTitle = "2nd Persons List from GridViewComponent",
      Persons = [
        new ()
        {
          Name = "Mia",
          JobTitle = "Developer"
        },
        new ()
        {
          Name = "Emma",
          JobTitle = "UI/UX Designer"
        },
        new ()
        {
          Name = "Avva",
          JobTitle = "SQA Enginner"
        }
      ]
    };
}

<h1>Welcome to the Matchine</h1>
@await Component.InvokeAsync("Grid", new {
    grid = personGridModel2
})

@* @await Component.InvokeAsync("Grid" grid="personGridModel2"></vc:grid> *@

@if (Model.Any())
{
    foreach (Person person in Model)
    {
        <div class="box float-left w-50">
            <h3>@person.Name</h3>
            <table class="table w-100">
                <tbody>
                    <tr>
                        <td>Gender</td>
                        <td>@person.PersonGender</td>
                    </tr>
                    <tr>
                        <td>Date of Birth</td>
                        <td>@person.DateOfBirth?.ToString("MM/dd/yyyy")</td>
                    </tr>
                </tbody>
            </table>
            <button type="button"><a href="/person-details/@person.Name">Details</a></button>
        </div>
    }
    <button type="button"><a href="/person-with-product">Person with Product</a></button>
}
else
{
    <h2>No People found!</h2>
}